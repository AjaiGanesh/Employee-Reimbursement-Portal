<!-- app/views/departments/index.html.erb -->
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Department', new_department_path, class: 'btn btn-success mb-3' %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td>
              <%= link_to 'Edit', edit_department_path(department), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
