<!-- app/views/bills/index.html.erb -->
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Bill', new_bill_path, class: 'btn btn-success mb-3' %>
    <h4>Total Amount: <%= @bills.dig(:total)%></h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Type</th>
          <th>Amount</th>
          <th>Date Of Submission</th>
          <th>Submitted By</th>
          <th>Department</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @bills.dig(:data).each do |bill| %>
          <tr>
            <td><%= bill.bill_type %></td>
            <td><%= bill.amount %></td>
            <td><%= bill.created_at.to_date %></td>
            <td><%= bill.employee.first_name + " " + bill.employee.last_name%></td>
            <td><%= bill.employee.department.name %></td>
            <td>
              <%= link_to 'Edit', edit_bill_path(bill), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', bill, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
