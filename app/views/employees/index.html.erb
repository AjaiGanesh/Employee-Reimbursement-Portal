<!-- app/views/employees/index.html.erb -->
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Employee', new_employee_path, class: 'btn btn-success mb-3' %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Designation</th>
          <th>Department</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.first_name + " " + employee.last_name %></td>
            <td><%= employee.designation %></td>
            <td><%= employee.department.name %></td>
            <td>
              <%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
